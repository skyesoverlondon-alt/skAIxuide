            <div class="sub-title" id="presents-text">An Intelligence Ecosystem</div>
            <h1 class="main-title" id="company-name">Skyes Over London</h1>
            <img src="https://cdn1.sharemyimage.com/2026/02/16/logo1_transparent.png" id="company-logo" alt="Skyes Over London Logo" />
            <div class="tagline" id="tagline-text">Eminence In Motion</div>
        </div>
    </div>

    <script>
        // --- ADVANCED 3D PARALLAX RAIN SIMULATION ---
        const canvas = document.getElementById('rain-canvas');
        const ctx = canvas.getContext('2d');
        let width, height;
        let drops = [];

        function initCanvas() {
            width = canvas.width = window.innerWidth;
            height = canvas.height = window.innerHeight;
            drops = [];
            
            const dropCount = Math.floor(width * 0.6); // Slightly denser rain
            for(let i = 0; i < dropCount; i++) {
                // z represents depth: 0 is far background, 1 is close foreground
                const z = Math.random(); 
                
                drops.push({
                    x: Math.random() * width,
                    y: Math.random() * height,
                    z: z,
                    // Parallax physics calculations
                    length: (Math.random() * 20 + 10) * (z * 1.5 + 0.5),
                    speed: (Math.random() * 15 + 10) * (z * 2.0 + 0.5),
                    opacity: (Math.random() * 0.3 + 0.05) * (z * 1.5 + 0.2),
                    thickness: (Math.random() * 2 + 0.5) * (z * 1.5 + 0.2)
                });
            }
        }

        function drawRain() {
            ctx.clearRect(0, 0, width, height);
            
            // Deep cinematic night sky gradient
            let bgGradient = ctx.createLinearGradient(0, 0, 0, height);
            bgGradient.addColorStop(0, '#010206');
            bgGradient.addColorStop(1, '#060a12');
            ctx.fillStyle = bgGradient;
            ctx.fillRect(0, 0, width, height);

            ctx.lineCap = 'round';
            for(let i = 0; i < drops.length; i++) {
                let d = drops[i];
                ctx.beginPath();
                ctx.moveTo(d.x, d.y);
                
                // Wind angle changes slightly based on depth (z)
                let windOffset = d.length * (0.1 + (d.z * 0.05));
                ctx.lineTo(d.x + windOffset, d.y + d.length);
                
                // Rain color with a slight cinematic cyan tint
                ctx.strokeStyle = `rgba(180, 200, 230, ${d.opacity})`;
                ctx.lineWidth = d.thickness;
                ctx.stroke();

                // Move drop
                d.y += d.speed;
                d.x += d.speed * (0.1 + (d.z * 0.05)); // Parallax wind

                // Reset drop if it hits bottom
                if(d.y > height) {
                    d.y = -d.length;
                    d.x = Math.random() * width;
                }
            }
            requestAnimationFrame(drawRain);
        }

        window.addEventListener('resize', initCanvas);
        initCanvas();
        drawRain();


        // --- CHOREOGRAPHY (THE DIRECTOR) ---
        const presentsText = document.getElementById('presents-text');
        const companyLogo = document.getElementById('company-logo');
        const companyName = document.getElementById('company-name');
        const taglineText = document.getElementById('tagline-text');
        const lightning = document.getElementById('lightning');

        function triggerLightning(intensity, duration) {
            lightning.style.opacity = intensity;
            setTimeout(() => {
                lightning.style.opacity = 0;
            }, duration);
        }

        function playSequence() {
            // 1. Initial distant, moody lightning
            setTimeout(() => triggerLightning(0.2, 40), 1000);
            setTimeout(() => triggerLightning(0.1, 80), 1100);
            
            setTimeout(() => triggerLightning(0.3, 50), 2500);

            // 2. Subtitle appears slowly
            setTimeout(() => {
                presentsText.classList.add('anim-sub-in');
            }, 1500);

            // 3. Massive lightning strike + Violent Reveal
            setTimeout(() => {
                // Pre-strike flash
                triggerLightning(0.9, 30);
                
                setTimeout(() => {
                    // MAIN STRIKE (Blinding)
                    triggerLightning(1.0, 120);
                    companyLogo.classList.add('anim-logo-reveal');
                    companyName.classList.add('anim-title-reveal');
                    
                    // Reveal the tagline slightly after the main strike settles
                    setTimeout(() => {
                        taglineText.classList.add('anim-tagline-reveal');
                    }, 1800);

                    // Rolling thunder fade out
                    setTimeout(() => triggerLightning(0.6, 60), 160);
                    setTimeout(() => triggerLightning(0.2, 100), 280);
                }, 150);

            }, 6000); // Delayed slightly to build more tension as subtitle fades
            
            // 4. Secondary distant flash much later
            setTimeout(() => triggerLightning(0.15, 60), 12000);
        }

        // Start sequence on load
        window.onload = () => {
            setTimeout(playSequence, 500);
        };
    </script>
</body>
</html>